<div id="vocabulary-list">
  <div class="logo-header">
  {% if request.vocabList|length == 0 %}
  <h2>{% trans "No vocabularies on the server!" %}</h2>
  {% else %}
    {% if category_label %}
    <h1>{{ category_label }}</h1><br>
    {% endif %}
  </div>
  <div class="vocabularies">
    {% for vocabClassName,vocabArray in request.vocabList %}
    <section>
    <div class="vocab-category row">
      <h2>{{ vocabClassName|upper }}</h2>
      <br><br>
      {% for vocab in vocabArray %}
      
        <div class="col-sm-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <a class="navigation-font" href="{{ vocab.id }}/{{ request.lang }}/{% if request.contentLang != request.lang and request.contentLang != '' %}?clang={{ request.contentLang }}{% endif %}">{{ vocab.title }}</a>
              {% set stat = vocab.getVocabStatistics(request.lang) %}
              {% set terms = 0 %}
              <br>
				(
              {% for key, val in stat %}
                {% if key == 'stat' %}
                  {% for keyLabel, labelValue in val %}
                     {% set terms = terms + labelValue %}
                  {% endfor %}
                  Terms : {{terms}}
                {% endif %}
                {% if key == 'concept' %}
                  {% for keyLabel, labelValue in val %}
                    {{keyLabel}} : 
                    {% for keyConcept, conceptValue in labelValue %}
                      {% if keyConcept == 'count' %}
                         {{conceptValue}}
                      {% endif %}
                   {% endfor %}
                   {% if not loop.last %}, {% endif %}
                  {% endfor %}
                {% endif %}
                {% if loop.last %})<br>{% endif %}
                {% if not loop.last %}, {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    </section>
    {% if not loop.last %}<div class="vocabulary-separator"></div>{% endif %}
    {% endfor %}
  </div>
  {% endif %}
</div>
